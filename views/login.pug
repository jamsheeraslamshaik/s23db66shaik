extends layout

block content
  .container
    h1= title
    h2= message
    br

    form(role='form', action="/login", method="post", style='max-width: 300px;')
      .form-group
        label(for='username') Username
        input.form-control(type='text', name='username', id='username', placeholder='Enter Username', required)
      
      .form-group
        label(for='password') Password
        input.form-control(type='password', name='password', id='password', placeholder='Password', required)
      
      button.btn.btn-default(type='submit') Submit
      a(href='/') Go back
      button.btn.btn-primary(type='button') Cancel